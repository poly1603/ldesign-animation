{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ldesign/animation-core": ["./packages/core/src"],
      "@ldesign/animation-vue": ["./packages/vue/src"],
      "@ldesign/animation-react": ["./packages/react/src"],
      "@ldesign/animation-lit": ["./packages/lit/src"],
      "@ldesign/animation-solid": ["./packages/solid/src"],
      "@ldesign/animation-svelte": ["./packages/svelte/src"],
      "@ldesign/animation-angular": ["./packages/angular/src"],
      "@ldesign/shared": ["../shared/src"]
    }
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/vue" },
    { "path": "./packages/react" },
    { "path": "./packages/lit" },
    { "path": "./packages/solid" },
    { "path": "./packages/svelte" },
    { "path": "./packages/angular" }
  ],
  "include": [
    "packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "lib",
    "examples",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
